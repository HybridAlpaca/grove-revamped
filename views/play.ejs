        window.console.__error = window.console.error;
        window.console.__warn = window.console.warn;
        window.console.error = function(out) {
            if (!/looks like it points into the shape/.test(out))
                console.__error(out);
        };
        window.console.warn = function(out) {
            if (!/^\.vertices\[/.test(out)
            && !/extension not supported/.test(out)
            && !/image is not power of two/.test(out))
                console.__warn(out);
        };
        
    </script>

